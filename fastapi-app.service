[Unit]
Description=FastAPI Person Data Application
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/fastapi-s3-app
Environment="PATH=/home/ubuntu/fastapi-s3-app/venv/bin"
ExecStart=/home/ubuntu/fastapi-s3-app/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target